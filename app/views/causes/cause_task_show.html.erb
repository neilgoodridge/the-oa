<div class="page-container">
  <div class="title">
    <!-- <h2><%= @cause.name %></h2> -->
    <div class="carousel-container">
      <div class="cause-carousel">
        <div class="previous-button">
          <%= link_to previous_cause_path(index: @index, time: @time) do  %>
          <button><</button>
          <% end  %>
        </div>
        <div class="carousel-image">
          <% if @cause.photo.attached? %>
            <%= cl_image_tag (@cause.photo.key)%>
          <% else %>
            <img src="https://res.cloudinary.com/k2x4b-523p/image/upload/v1622768272/lym3euydklxpwbqztkui.jpg">
          <% end %>
        </div>
        <div class="next-button">
          <%= link_to next_cause_path(index: @index, time: @time) do  %>
          <button>></button>
          <% end  %>
        </div>
      </div>
    </div>
    <div class="more-info"><button>Find out more. Click here</button></div>
      <div class="progess-bar">
      </div>
  </div>

      <div class="cause-container">
        <div class="cause-show-cards">
          <div class="cause-show-card">
            <div>
            <h2> Here's the latest news about <%= @cause.name %></h2>
            </div>
              <div class="cause-twitter-card">
                <br>
                 <% @tweets.each do |tweet| %>
                 User @<%= tweet.user.screen_name %> said: "<%= tweet.text %>" on <%= tweet.created_at.strftime('%-m/%d/%Y') %>
                <br>
                <% end %>
              </div>
            </div>
          <div class="cause-show-card">
          <%= render 'task_list' %>
          </div>
        </div>
      </div>
  </div>
</div>
<div class="more-info-show">
  <h1>More info about this cause<h1>
  <h3> Notable organizations </h3>
</div>

