<div class="choose">
  <h1 class="cause-container-title">Welcome Online Activist</h1>
  <div class="cause-container">
    <h2>Choose a cause you care about</h2>
    <div class="cause-cards">
      <% @causes.each do |cause|%>
      <%= link_to add_selected_cause_path(cause), remote: true do %>
      <div class="cause-card">
        <div class="clickable">
          <h3><%= cause.name %></h3>
          <div class="overlay">
            <div class="photo" >
              <% if cause.photo.attached? %>
                <%= cl_image_tag (cause.photo.key)%>
              <% else %>
                <img src="https://res.cloudinary.com/k2x4b-523p/image/upload/c_scale,h_140,w_250/v1622768272/lym3euydklxpwbqztkui.jpg">
              <% end %>
            </div>
            <div class="text-description">
              <%= cause.description %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
    </div>
    <div class="time-container">
        <div class="box" style="width: 80%;">
          <img src="https://www.metiseurope.eu/wp-content/uploads/2021/02/united-nations-covid-19-response-sCY7W_uE8uE-unsplash-scaled-e1612610623999-1024x647.jpg" class="background-image">
          <div class="shade" ></div>
          <p class="ignite">How many minutes can you spare to <strong>ignite the fight</strong> today?</p>
        </div>
      <div class="time-cards">
        <div class="time-card">
          <button class="select-time">2</button>
        </div>
        <div class="time-card">
         <button class="select-time">5</button>
        </div>
        <div class="time-card">
         <button class="select-time">15</button>
        </div>
        <div class="time-card">
          <button class="select-time">30</button>
        </div>
        <div class="time-card">
         <button class="select-time">60</button>
        </div>
        <div class="time-card">
          <button class="select-time">âˆž</button>
        </div>
      </div>
    </div>
    <div class="submit-container">
      <div class="submit-card">
        <button class="button-ta"><%= link_to "Take Action", cause_task_path(time: @time), class: "take-action-btn" %></button>
      </div>
    </div>
  </div>
</div>
