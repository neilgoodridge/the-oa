<div class="welcome">
  <div class="choose">
    <h1>Welcome O.nline A.ctivist</h1>
    <div class="cause-container">
      <h2>Choose a cause you care about</h2>
      <div class="cause-cards">
        <% @causes.each do |cause|%>
        <%= link_to add_selected_cause_path(cause), remote: true do %>
        <div class="cause-card">
          <h3><%= cause.name %></h3>
          <div class="clickable">
            <div class="overlay">
              <div class="photo" >
                <% if cause.photo.attached? %>
                  <%= cl_image_tag (cause.photo.key)%>
                <% else %>
                  <img src="https://res.cloudinary.com/k2x4b-523p/image/upload/c_scale,h_140,w_250/v1622768272/lym3euydklxpwbqztkui.jpg">
                <% end  %>
              </div>
              <div class="text-description"><%= cause.description %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
      </div>
    <div class="time-container">
      <h2> How many minutes can you spare to <strong>ignite the fight</strong> today?</h2>
      <div class="time-cards">
        <div class="time-card">
          <button><%= link_to "2",select_time_path(time: 2), remote: true %></button>
        </div>
        <div class="time-card">
          <button><%= link_to "5",select_time_path(time: 5), remote: true %></button>
        </div>
        <div class="time-card">
          <button><%= link_to "15",select_time_path(time: 15), remote: true %></button>
        </div>
        <div class="time-card">
          <button><%= link_to "30",select_time_path(time: 30), remote: true %></button>
        </div>
        <div class="time-card">
          <button><%= link_to "60",select_time_path(time: 60), remote: true %></button>
        </div>
        <div class="time-card">
          <button><%= link_to "âˆž",select_time_path(time: 1000), remote: true %></button>
        </div>
      </div>
    </div>
    <div class="submit-container">
      <div class="submit-card">
        <button><%= link_to "Take Action",cause_task_path(time: @time) %></button>
      </div>
    </div>
  </div>
</div>
