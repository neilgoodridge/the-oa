<div class = "welcome-dashboard">
  <div class="container">
      <h1>Welcome to your dashboard <%= @name %></h1>
      <br>
      <h3>Checkout your progress on the change youâ€™ve fueled below. <br>What cause will you contribute to next?</h3>
    <div class="carousel-container">
      <div class="cause-carousel">
        <div class="previous-button">
          <%= link_to dashboard_previous_cause_path(index: @index) do  %>
          <button><</button>
          <% end  %>
        </div>
        <div class="carousel-image">
          <% if @cause.photo.attached? %>
            <%= cl_image_tag (@cause.photo.key)%>
          <% else %>
            <img src="https://res.cloudinary.com/k2x4b-523p/image/upload/v1622768272/lym3euydklxpwbqztkui.jpg">
          <% end %>
        </div>
        <div class="next-button">
          <%= link_to dashboard_next_cause_path(index: @index) do  %>
          <button>></button>
          <% end  %>
        </div>
          <!-- <div class="more-info"><button>Find out more. Click here</button></div> -->
      </div>
    </div>

      <div class="submit-container">
        <div class="submit-card">
          <button><%= link_to "Add a new cause to your dashboard +",causes_path %></button>
        </div>
      </div>
      <div class="cause-container">
        <div class="cause-show-cards">
          <div class="cause-show-card">
            <div class = "container-home-left">
                <h4>Community efforts for <%= @cause.name %></h4>
                 <ul class="list-unstyled">
                  <% users= User.all %>
                    <li>Community members: <%= users.count%> </li>
                    <br>
                  <% actions = Action.all %>
                    <li>Total tasks completed by the community: <%= actions.count%> </li>
                    <br>
                    <% winner= User.find_by(id: 60) %>
                    <li>Highest scoring O.nline A.ctivist: <%= winner.name %> </li>
                    <br>
                    <li>Points: 560 </li>

                </ul>
            </div>
          </div>
          <div class="cause-show-card">
            <div class = "container-home-right">
              <%= render "show" %>
              <div class="submit-container">
                <div class="submit-card">
                  <button><%= link_to "Complete more tasks for this cause ->",cause_task_path %></button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
