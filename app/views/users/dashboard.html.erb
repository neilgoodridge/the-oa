<div class="banner"style="background-image: url(https://www.hubinternational.com/-/media/HUB-International/Blog/Articles/Main-Images/Main-Image-Activist-Restaurant-Interruption.jpg?h=1125&w=2000&la=en&hash=D748A50986C299205B2797DF89C39DDD),"></div>
  <div class="header"></div>
    <div class="page-container-background">
      <div class="page-container-dashboard">
        <div class="carousel-container">
          <div class="cause-carousel">
            <div class="carousel-image">
              <div class="previous-button">
                <%= link_to dashboard_previous_cause_path(index: @index) do  %>
                <i class="fa fas fa-chevron-left arrow arrow-left"></i>
                <% end  %>
              </div>
                <% if @cause.photo.attached? %>
                  <%= cl_image_tag (@cause.photo.key)%>
                <% else %>
                  <img src="https://res.cloudinary.com/k2x4b-523p/image/upload/v1622768272/lym3euydklxpwbqztkui.jpg">
                <% end %>
              <div class="next-button">
                <%= link_to dashboard_next_cause_path(index: @index) do  %>
                <i class="fa fas fa-chevron-right arrow arrow-right"></i>
                <% end  %>
              </div>
            </div>
          </div>
        </div>
        <div class="cause-container">
          <div class="cause-show-cards community-cards">
            <div class="cause-show-card-left dashboard-card-left">
              <div class="dashboard-topper-left">
                <h2>Community efforts</h2>
              </div>
              <div class="user-cards">
                <div class="community-card">
                  <div class="all-users dashboard-card">
                    <div class="card-header">
                      <h4>O.A. Community members</h4>
                    </div>
                    <div class="number">
                      <% users = User.all %>
                      <p><%= users.count%></p>
                    </div>
                  </div>
                  <div class="all-tasks dashboard-card">
                    <% actions = Action.all %>
                    <div class="card-header">
                      <h4>Total tasks completed</h4>
                    </div>
                    <div>
                      <p><%= actions.count%></p>
                    </div>
                  </div>
                </div>
                <div class="top-users">
                  <div class="top-user dashboard-card">
                    <div class="card-header">
                      <h4>Highest scoring Online Activist</h4>
                    </div>
                    <div>
                      <p><%= users.first.name %></p>
                    </div>
                  </div>
                  <div class="top-points dashboard-card">
                    <div class="card-header">
                      <h4>Points</h4>
                    </div>
                    <div>
                      <p>460</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="dashboard-card-right">
              <%= render "show" %>
            </div>
    </div>
  </div>
</div>
