<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->
    <h2 class="active"> Log In </h2>
    <h2 class="inactive underlineHover"> <%= link_to "Sign Up", new_user_registration_path %></h2>


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">

        <%= f.input :email, required: true,
                    autofocus: true,
                    placeholder: "greta@gmail.com",
                    input_html: { autocomplete: "email" } %>
               <!-- <input type="text" class="fadeIn third" name="login" placeholder="password"> -->
        <%= f.input :password, type: "text", id: "password", class: "fadeIn Third", name: "login",
                    required: true,
                    placeholder: "******",
                    input_html: { autocomplete: "current-password", } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <!-- <input type="submit" class="fadeIn fourth" value="Log In"> -->
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    <div id="formFooter">
          <a class="underlineHover"> <%= render "devise/shared/links" %> </a>
        </div>

    </div>
  </div>
</div>
